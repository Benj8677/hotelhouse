            </li>
            <li>
              <a href="#!" class="text-dark">Le spa</a>
            </li>
            <li>
              <a href="{{ path('app_actu') }}" class="text-dark">Les actualités</a>
            </li>
          </ul>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-lg-3 col-md-6 mb-4 mb-md-0 m-auto">
          <h5 class="text-secondary">Page du site</h5>
          <ul class="list-unstyled mb-0">
            <li>
              <a href="{{ path('app_page', {id:1}) }}" class="text-dark">Accès</a>
            </li>
            <li>
              <a href="{{ path('app_page', {id:2}) }}" class="text-dark">Qui sommes-nous?</a>
            </li>
            <li>
              <a href="{{ path('app_page', {id:3}) }}" class="text-dark">Mentions légales</a>
            </li>
            <li>
              <a href="{{ path('app_page', {id:4}) }}" class="text-dark">CGV</a>
            </li>
          </ul>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-lg-3 col-md-6 mb-4 mb-md-0 m-auto">
          <h5 class="text-secondary">Autre</h5>

          <ul class="list-unstyled mb-0">
          {% if app.user %}
            <li>
              <a href="{{ path('app_compte') }}" class="text-dark">Mon compte</a>
            </li>
            <li>
              <a href="{{ path('app_logout') }}" class="text-dark">Se déconnecter</a>
            </li>
          {% else %}
            <li>
              <a href="{{ path('app_register') }}" class="text-dark">Créer un compte</a>
            </li>
            <li>
              <a href="#!" class="text-dark" onclick="getElementById('connect').style.display='';">Se connecter</a>
            </li>
          {% endif %}
            <li>
              <a href="{{ path('app_contact') }}" class="text-dark">Contact</a>
            </li>
            <li>
              <a href="#!" class="text-dark">Newsletter</a>
            </li>
          </ul>
        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
    </section>
